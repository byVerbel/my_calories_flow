<% provide(:title, "Dashboard") %>
<div class="text-center p-5 mb-4 bg-light rounded-3 justify-content-center">
  <%= gravatar_for current_user %>
  <h1 class="mb-4"><b><%= user_full_name(current_user) %></b></h1>
  <h4 class="fw-normal mb-4">You have: <b> <%= pluralize(current_user.calorie.count, "log") %> </b></h4>
  <%= link_to "Add calorie register!", new_calory_path, class: "btn btn-lg btn-primary mt-3" %>
  <br>
</div>
