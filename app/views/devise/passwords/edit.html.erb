<div class="py-5 px-3 mb-4 bg-light rounded-3">
  <div class="row justify-content-center text-center">
    <div class="col-lg-6">
      <h1 class="mb-4">Change your password</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="field">
          <% if @minimum_password_length %>
            <%= f.password_field :password, class:"form-control mb-2", placeholder:"Password (#{@minimum_password_length} characters minimum)", autofocus: true, autocomplete: "new-password" %>
          <% end %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, class:"form-control mb-2", placeholder:"Confirm password", autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-lg btn-dark my-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
