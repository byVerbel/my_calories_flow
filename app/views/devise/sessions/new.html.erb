<div class="py-5 px-3 mb-4 bg-light rounded-3">
  <div class="row justify-content-center text-center">
    <div class="col-lg-6">
      <h1 class="mb-4">Log in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.email_field :email, class:"form-control mb-2", placeholder:"Email", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field form-group">
          <%= f.password_field :password, class:"form-control mb-2", placeholder:"Password", autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-lg btn-dark my-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
