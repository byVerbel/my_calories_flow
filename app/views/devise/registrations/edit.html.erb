<div class="row py-5 px-3 mb-4 bg-light rounded-3">
  <div class="row justify-content-center text-center">
    <div class="col-lg-7">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group">
          <%= f.text_field :firstname, class:"form-control mb-2", placeholder:"First name", autofocus: true %>
        </div>
        <div class="field form-group">
          <%= f.text_field :lastname, class:"form-control mb-2", placeholder:"Last name"%>
        </div>
        <div class="field form-group">
          <%= f.date_field :birthday, max: col_date, class:"form-control  mb-2", placeholder: "Birthday" %>
        </div>
        <div class="field form-group">
          <%= f.email_field :email, class:"form-control mb-2", placeholder:"Email", autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to change it):</i><br />
          <% if @minimum_password_length %>
            <%= f.password_field :password, class:"form-control mb-2", placeholder:"New password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password" %>
          <% end %>
        </div>
        <div class="field form-group">
          <%= f.password_field :password_confirmation, class:"form-control mb-2", placeholder:"New password confirmation", autocomplete: "new-password" %>
        </div>
        <div class="field form-group">
          <%= f.password_field :current_password, class:"form-control mb-2", placeholder:"Current password (to confirm the changes)", autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Update", class: "btn btn-lg btn-dark mb-4" %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-5 p-5">
      <div class="card text-white bg-danger border-secondary p-1 text-center" style="max-width: auto;">
        <div class="card-header fw-bold">Cancel my account
        </div>
        <div class="card-body">
          <p class="fs-4 my-0">Unhappy?</p>
          <p class="fs-6">(Esto no funciona en Heroku)</p>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-light' %>
        </div>
      </div>
    </div>
    <br>
    <%= link_to "Back", :back, class:"link--normal" %>
  </div>
</div>
