<div class="py-5 px-3 mb-4 bg-light rounded-3">
  <div class="row justify-content-center text-center">
    <div class="col-lg-6">
      <h1 class="mb-4">Sign up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group">
          <%= f.text_field :firstname, class:"form-control mb-2", placeholder:"First name", autofocus: true %>
        </div>
        <div class="field form-group">
          <%= f.text_field :lastname, class:"form-control mb-2", placeholder:"Last name"%>
        </div>
        <div class="field form-group">
          <%= f.date_field :birthday, max: col_date, class:"form-control  mb-2", placeholder: "Birthday" %>
        </div>
        <div class="field form-group">
          <%= f.email_field :email, class:"form-control mb-2", placeholder:"Email", autocomplete: "email" %>
        </div>
        <div class="field form-group">
          <% if @minimum_password_length %>
            <%= f.password_field :password, class:"form-control mb-2", placeholder:"Password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password" %>
          <% end %>
        </div>
        <div class="field form-group">
          <%= f.password_field :password_confirmation, class:"form-control mb-2", placeholder:"Confirm password", autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-lg btn-dark my-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
