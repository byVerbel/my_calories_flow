<% provide(:title, 'Chart') %>
<div class="p-5 mb-4 bg-light rounded-3">
  <div>
    <div class="d-flex mb-4">
      <div class="me-3"><%= gravatar_for @user %></div>
      <h1 class="align-self-center"><%= @user.firstname + ' ' + @user.lastname %>: Last 30 days chart</h1>
    </div>
    <%= render "chart_query" %>
    <%= line_chart @calories, points: false %>
  </div>
</div>
