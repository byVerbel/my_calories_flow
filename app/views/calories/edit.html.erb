<% provide(:title, 'Edit calorie register') %>
<% provide(:button_text, 'Save register changes') %>
<div class="py-5 px-3 mb-4 bg-light rounded-3">
  <div class="row justify-content-center text-center">
    <div class="col-lg-6">
      <h1 class="mb-4">Edit calorie register</h1>
      <%= render 'form' %>
      <%= link_to 'Delete calorie register', @calorie, class:'btn btn-outline-danger btn-lg my-4', method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
      <%= link_to 'Show', @calorie, class:"link--normal" %> |
      <%= link_to 'Back', calories_path, class:"link--normal" %>
    </div>
  </div>
</div>
