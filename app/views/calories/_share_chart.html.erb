<%= form_with url: chart_path, method: :get do |form| %>
  <h3 class="text-bold">Share your chart with a friend</h3>
  <div class="d-flex">
    <div class="d-flex flex-column w-100 search me-2">
      <div class="d-flex">
        <%= form.text_field :friend_email, class:"form-control mb-4", placeholder:"Friend email" %>
      </div>
    </div>
    <%= form.submit "Share", class: "btn btn-primary mb-4 align-self-center" %>
  </div>
<% end %>
